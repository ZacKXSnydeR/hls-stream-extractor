{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.js",
            "use": "@vercel/node",
            "config": {
                "maxLambdaSize": "50mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/",
            "dest": "/api/index.js"
        }
    ],
    "functions": {
        "api/extract.js": {
            "memory": 1024,
            "maxDuration": 60
        }
    }
}